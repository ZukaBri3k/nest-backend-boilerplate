generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  isEmailVerified Boolean @default(false)
  name      String?
  password  String
  role      Role   @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tokens    Token[]
}

enum Role {
  USER
  ADMIN
}

model Token {
  id        String   @id @default(uuid())
  type      TokenType
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  expiresAt DateTime
}

enum TokenType {
  RESET_PASSWORD
  EMAIL_VERIFICATION
}